<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewMemberActivity">
    <include
        android:id="@+id/global_header"
        layout="@layout/global_header">
    </include>

    <TextView
        android:id="@+id/txtAddMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/global_header"
        android:textSize="24dp"
        android:text="Enter new member's email: "
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/new_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAddMember"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/back_to_group_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_below="@+id/new_member"
        android:layout_alignLeft="@+id/new_member"
        />

    <Button
        android:id="@+id/addMemberBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Member"
        android:layout_below="@+id/new_member"
        android:layout_alignRight="@+id/new_member"
    />

</RelativeLayout>